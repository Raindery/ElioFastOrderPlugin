{% block fast_order_form_inputs_row %}
    <div class="row align-items-start {{ extraClass }}">
        <div class="col-7" style="padding-left: 0">
            <label style="width: 100%">


                <input
                       type="text"
                       name="productData[{{ fastOrderProductId }}][productNumber]"
                       value="{{ data.get( 'productData[{{ productId }}][productNumber]' ) }}"
                       placeholder="{{'elio_fast_order.form.fieldPlaceholderInColLeft' |trans }}"
                       required="required"
                       class="form-control"
                >

            </label>
        </div>

        <div class="col-5" style="padding-right: 0; width: 100%">
            <label style="width: 100%;">
                <select class="custom-select"
                        name="productData[{{ fastOrderProductId }}][productQuantity]"
                        data-value="{{ data.get( "productData[{{ fastOrderProductId }}][productQuantity]" ) }}"
                        required="required"
                >
                    {% for i in range(1, config('core.cart.maxQuantity')) %}
                        <option value="{{ i }}">{{ i }}</option>
                    {% endfor %}
                </select>
            </label>
        </div>

    </div>


{% endblock %}